[
  {
    "key": "group_portfolio_showcase",
    "title": "Portfolio Showcase Block",
    "fields": [
      {
        "key": "field_portfolio_section_heading",
        "label": "Section Heading",
        "name": "portfolio_section_heading",
        "type": "text",
        "default_value": "Zobacz Nasze Realizacje – Filmy Reklamowe, Które Osiągnęły Sukces"
      },
      {
        "key": "field_portfolio_section_description",
        "label": "Section Description",
        "name": "portfolio_section_description",
        "type": "wysiwyg",
        "tabs": "visual",
        "toolbar": "basic"
      },
      {
        "key": "field_featured_projects",
        "label": "Featured Projects",
        "name": "featured_projects",
        "type": "repeater",
        "sub_fields": [
          {
            "key": "field_project_title",
            "label": "Project Title",
            "name": "title",
            "type": "text",
            "required": 1
          },
          {
            "key": "field_project_category",
            "label": "Category",
            "name": "category",
            "type": "text"
          },
          {
            "key": "field_project_description",
            "label": "Description",
            "name": "description",
            "type": "wysiwyg",
            "tabs": "visual",
            "toolbar": "basic"
          },
          {
            "key": "field_project_results",
            "label": "Results/Outcomes",
            "name": "results",
            "type": "textarea"
          },
          {
            "key": "field_project_featured_media",
            "label": "Featured Media",
            "name": "featured_media",
            "type": "file",
            "return_format": "array",
            "mime_types": "jpg,jpeg,png,gif,mp4,webm"
          }
        ],
        "min": 1,
        "layout": "row"
      },
      {
        "key": "field_portfolio_cta_text",
        "label": "Portfolio CTA Text",
        "name": "portfolio_cta_text",
        "type": "text",
        "default_value": "Zobacz Pełne Portfolio"
      },
      {
        "key": "field_portfolio_cta_link",
        "label": "Portfolio CTA Link",
        "name": "portfolio_cta_link",
        "type": "url"
      }
    ],
    "location": [
      [
        {
          "param": "block",
          "operator": "==",
          "value": "acf/portfolio-showcase"
        }
      ]
    ]
  }
]